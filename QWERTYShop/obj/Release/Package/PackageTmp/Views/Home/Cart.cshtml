@model QWERTYShop.Models.CartModels
@{
    ViewBag.Title = "Cart";
}
    <head>
        <link rel="stylesheet" href="~/Content/Styles.css">
    </head>
<h2 align="center">Моя корзина</h2>
<h3>@ViewBag.CartMessage</h3>
@if (Session["cart"] != null)
{
    <h6 align="right">
    <form method="post">
    <input style="min-width: 200px" class="buttons" type="submit" value="Очистить корзину" />
    <input type="text" hidden=hidden value="/" name="Method" />
    </form>
    </h6>
}

@foreach (var element in ViewBag.CartContainer)
{   <p>Название: @Html.ActionLink($"{@element.Name}", "Card", "Home", new { id = element.Id }, null) </p>
    <p>Цена: @element.Cost </p>
    <p>Количество: @element.Count </p>
    <form method="post">
        <input type="submit" value="+" name="Method" />
        <input type="number" value="@element.Id" name="Id" />
    </form>
    <form method="post">
        <input type="submit" value="-" name="Method" />
        <input type="number" value="@element.Id" name="Id" />
    </form>

}
@if (ViewBag.CartPrice != "")
{
    <h3>Текущая сумма: @ViewBag.CartPrice</h3>
}
@if (Session["cart"] != null)
{
    <input  class="buttons" type="button" value="Оформить покупку" style="min-width: 220px; max-width: 75%; margin: 0 auto;padding: 0;" onClick='location.href="http://qwertyshop.azurewebsites.net/home/purchaseinfo"'/>
}

