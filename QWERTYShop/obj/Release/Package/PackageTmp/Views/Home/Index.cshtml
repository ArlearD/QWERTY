<head>
    <link rel="stylesheet" href="~/Content/Styles.css">
</head>
<h1 style="text-align:center">Новинки:</h1>
<div class="conatiner">
    <div class="wrap">
        @foreach (var element in @ViewBag.Cards)
        {
            <div onClick='location.href="http://qwertyshop.azurewebsites.net/Card/@element.Id"' class="product-item">
                <img src="https://source.unsplash.com/270x400">
                <div class="product-list">
                    <h3>@element.Name</h3>
                    <span class="price">₽ @element.Cost</span>
                    <h4>@Html.ActionLink("Добавить в корзину", "AddToCart", "Home", new { id = element.Id }, null)</h4>
                </div>
            </div>
        }
    </div>
</div>

@foreach (var element in ViewBag.Categories)
{
    <input class="buttons" value="@element.Type" type="submit" onClick='location.href="http://qwertyshop.azurewebsites.net/category/@element.Type"' />
}
