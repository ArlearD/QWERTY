@model QWERTYShop.Models.ManagmentSortModels
<h3 align="center">Представление базы данных</h3>

<form method="post" align="left">
    <input type="text" value="Remove" name="Remove" readonly />
    <input type="submit" />
</form>

<p>Сортировка по:</p>
<form method="post">
    <input type="text" value="ID" name="Id" readonly />
    @Html.CheckBoxFor(x => x.isIdDescending) По убыванию
    <input type="submit" />
</form>

<form method="post">
    <input type="text" value="Name" name="Name" readonly />
    @Html.CheckBoxFor(x => x.isNameDescending) По убыванию
    <input type="submit" />
</form>

<form method="post">
    <input type="text" value="Type" name="Type" readonly />
    @Html.CheckBoxFor(x => x.isTypeDescending) По убыванию
    <input type="submit" />
</form>

<p align="left"> @Html.ActionLink("Вернуться к добавлению", "AddNewCard", "Managment") </p>
<p align="left"> @Html.ActionLink("Вернуться к управлению", "Index", "Managment") </p>

@foreach (var element in ViewBag.Data)
{
    <p align="center"> @element</p>
}
